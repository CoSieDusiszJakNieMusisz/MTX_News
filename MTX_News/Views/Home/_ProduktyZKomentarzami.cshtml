@model MTX_News.ViewModels.KomentarzViewModel

<tbody>

    @foreach (var towar in Model.ListaProduktow)
    {

        <tr class="wiersz" @if (towar.ProduktId % 2 != 0) { <text> style="background-color:  rgb(253, 238, 244); font-weight:normal;" </text> }>
            <td>
                <span>
                    @towar.Kod
                </span>
            </td>
            <td>
                <span>
                    @towar.Kod
                </span>
            </td>
            <td>
                <span>
                    @towar.Nazwa
                </span>
            </td>
            <td>
                <span>
                    @towar.Komentarz
                </span>
            </td>

            <td>
                <span>
                    @towar.PozostalaLiczbaDniDoKoncaWaznosci dni
                </span>
            </td>

            <td>
                <span>
                    @towar.KtoWprowadzil
                </span>
            </td>
            <td class="menuEdycji">
                <input type="image" src="~/Content/img/delete_15x15.png" />
                <input class="edytuj" data-id="@towar.ProduktId" type="image" src="~/Content/img/edit_15x15.png" />
            </td>
        </tr>

        <tr id="formularzKomentarza-@towar.ProduktId" class="formularzKomentarza"
            @if (Model.ProduktId % 2 != 0) { <text> style="background-color:  rgb(253, 238, 244); font-weight:normal;" </text> }>
            <td></td>
            <td></td>
            <td>
                @Html.Action("FormularzKomentarza")
            </td>
        </tr>
        
    }
</tbody>

